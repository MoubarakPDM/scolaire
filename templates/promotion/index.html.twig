{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
   <div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0">PROMOTIONS</h3>
    </div>
    <div class="card-body">
        <table id="scroll-horizontal" class="table nowrap align-middle card-li table-datatable" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Annee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.annee ? promotion.annee|date('Y') : '' }}</td>
                <td>
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-more-fill align-middle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">

                            <li><a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}" class="dropdown-item edit-item-btn"><i
                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i> Editer</a>
                            </li>
                            <li>
                                <a href="{{ path('app_promotion_delete', {'id': promotion.id}) }}" class="dropdown-item remove-item-btn">
                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                                </a>
                            </li>
                        </ul>
                    </div>

                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
   </table>
        </div>
    </div>

    {{ encore_entry_script_tags('datatable') }}

    <a href="{{ path('app_promotion_new') }}">Create new</a>
{% endblock %}
