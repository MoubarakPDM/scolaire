<div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0">Modifier Utilisateur</h3>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-lg-12">
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Enregisterer</button>
                </div>
            </div>

        </div>
        {{ form_end(form) }}
    </div>
</div>

