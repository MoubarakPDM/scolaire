<div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0">Fillier</h3>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.numero) }}
                    {{ form_widget(form.numero,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.telephone) }}
                    {{ form_widget(form.telephone,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.scolariter_payer) }}
                    {{ form_widget(form.scolariter_payer,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.fillier) }}
                    {{ form_widget(form.fillier,{ 'attr': {'class':'form-control'}}) }}
                </div>
            </div>

            <div class="col-lg-12">
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>

        </div>
        {{ form_end(form) }}
    </div>
</div>

